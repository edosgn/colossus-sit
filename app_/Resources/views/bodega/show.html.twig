{% extends 'base.html.twig' %}

{% block body %}
    <h1>Bodega</h1>

    <table>
        <tbody>
            <tr>
                <th>Nombre</th>
                <td>{{ bodega.nombre }}</td>
            </tr>
            <tr>
                <th>Estado</th>
                <td>{% if bodega.estado %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ bodega.id }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('bodega_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('bodega_edit', { 'id': bodega.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
