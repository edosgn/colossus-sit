{% extends 'base.html.twig' %}

{% block body %}
    <h1>Radioaccion</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ radioAccion.id }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ radioAccion.nombre }}</td>
            </tr>
            <tr>
                <th>Estado</th>
                <td>{% if radioAccion.estado %}Yes{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('radioaccion_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('radioaccion_edit', { 'id': radioAccion.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
