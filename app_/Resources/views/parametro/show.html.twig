{% extends 'base.html.twig' %}

{% block body %}
    <h1>Parametro</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ parametro.id }}</td>
            </tr>
            <tr>
                <th>Anio</th>
                <td>{{ parametro.anio }}</td>
            </tr>
            <tr>
                <th>Valor</th>
                <td>{{ parametro.valor }}</td>
            </tr>
            <tr>
                <th>Porcentaje</th>
                <td>{{ parametro.porcentaje }}</td>
            </tr>
            <tr>
                <th>Tipo</th>
                <td>{{ parametro.tipo }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('parametro_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('parametro_edit', { 'id': parametro.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
