{% extends 'base.html.twig' %}

{% block body %}
    <h1>Parametros list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Anio</th>
                <th>Valor</th>
                <th>Porcentaje</th>
                <th>Tipo</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for parametro in parametros %}
            <tr>
                <td><a href="{{ path('parametro_show', { 'id': parametro.id }) }}">{{ parametro.id }}</a></td>
                <td>{{ parametro.anio }}</td>
                <td>{{ parametro.valor }}</td>
                <td>{{ parametro.porcentaje }}</td>
                <td>{{ parametro.tipo }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('parametro_show', { 'id': parametro.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('parametro_edit', { 'id': parametro.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('parametro_new') }}">Create a new parametro</a>
        </li>
    </ul>
{% endblock %}
