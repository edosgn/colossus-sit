{% extends 'base.html.twig' %}

{% block body %}
    <h1>Cfgfestivos list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Fecha</th>
                <th>Descripcion</th>
                <th>Activo</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for cfgFestivo in cfgFestivos %}
            <tr>
                <td><a href="{{ path('cfgfestivo_show', { 'id': cfgFestivo.id }) }}">{{ cfgFestivo.id }}</a></td>
                <td>{% if cfgFestivo.fecha %}{{ cfgFestivo.fecha|date('Y-m-d') }}{% endif %}</td>
                <td>{{ cfgFestivo.descripcion }}</td>
                <td>{% if cfgFestivo.activo %}Yes{% else %}No{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('cfgfestivo_show', { 'id': cfgFestivo.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('cfgfestivo_edit', { 'id': cfgFestivo.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('cfgfestivo_new') }}">Create a new cfgFestivo</a>
        </li>
    </ul>
{% endblock %}
