{% extends 'base.html.twig' %}

{% block body %}
    <h1>Festivo</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ festivo.id }}</td>
            </tr>
            <tr>
                <th>Fecha</th>
                <td>{% if festivo.fecha %}{{ festivo.fecha|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Descripcion</th>
                <td>{{ festivo.descripcion }}</td>
            </tr>
            <tr>
                <th>Estado</th>
                <td>{% if festivo.estado %}Yes{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('festivo_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('festivo_edit', { 'id': festivo.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
