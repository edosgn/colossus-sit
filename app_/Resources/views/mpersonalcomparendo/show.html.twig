{% extends 'base.html.twig' %}

{% block body %}
    <h1>Mpersonalcomparendo</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ mpersonalComparendo.id }}</td>
            </tr>
            <tr>
                <th>Estado</th>
                <td>{{ mpersonalComparendo.estado }}</td>
            </tr>
            <tr>
                <th>Activo</th>
                <td>{% if mpersonalComparendo.activo %}Yes{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('mpersonalcomparendo_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('mpersonalcomparendo_edit', { 'id': mpersonalComparendo.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
