{% extends 'base.html.twig' %}

{% block body %}
    <h1>Genero</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ genero.id }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ genero.nombre }}</td>
            </tr>
            <tr>
                <th>Sigla</th>
                <td>{{ genero.sigla }}</td>
            </tr>
            <tr>
                <th>Estado</th>
                <td>{% if genero.estado %}Yes{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('genero_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('genero_edit', { 'id': genero.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
