{% extends 'base.html.twig' %}

{% block body %}
    <h1>Sucursals list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Sigla</th>
                <th>Direccion</th>
                <th>Telefono</th>
                <th>Celular</th>
                <th>Correo</th>
                <th>Fax</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for sucursal in sucursals %}
            <tr>
                <td><a href="{{ path('sucursal_show', { 'id': sucursal.id }) }}">{{ sucursal.id }}</a></td>
                <td>{{ sucursal.nombre }}</td>
                <td>{{ sucursal.sigla }}</td>
                <td>{{ sucursal.direccion }}</td>
                <td>{{ sucursal.telefono }}</td>
                <td>{{ sucursal.celular }}</td>
                <td>{{ sucursal.correo }}</td>
                <td>{{ sucursal.fax }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('sucursal_show', { 'id': sucursal.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('sucursal_edit', { 'id': sucursal.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('sucursal_new') }}">Create a new sucursal</a>
        </li>
    </ul>
{% endblock %}
