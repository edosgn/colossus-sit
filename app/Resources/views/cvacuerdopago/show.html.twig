{% extends 'base.html.twig' %}

{% block body %}
    <h1>Cvacuerdopago</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ cvAcuerdoPago.id }}</td>
            </tr>
            <tr>
                <th>Fecha</th>
                <td>{% if cvAcuerdoPago.fecha %}{{ cvAcuerdoPago.fecha|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Numerocuotas</th>
                <td>{{ cvAcuerdoPago.numeroCuotas }}</td>
            </tr>
            <tr>
                <th>Cuotaspagadas</th>
                <td>{{ cvAcuerdoPago.cuotasPagadas }}</td>
            </tr>
            <tr>
                <th>Activo</th>
                <td>{% if cvAcuerdoPago.activo %}Yes{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('cvacuerdopago_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('cvacuerdopago_edit', { 'id': cvAcuerdoPago.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
