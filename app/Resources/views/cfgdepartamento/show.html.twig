{% extends 'base.html.twig' %}

{% block body %}
    <h1>Cfgdepartamento</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ cfgDepartamento.id }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ cfgDepartamento.nombre }}</td>
            </tr>
            <tr>
                <th>Codigodane</th>
                <td>{{ cfgDepartamento.codigoDane }}</td>
            </tr>
            <tr>
                <th>Activo</th>
                <td>{% if cfgDepartamento.activo %}Yes{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('cfgdepartamento_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('cfgdepartamento_edit', { 'id': cfgDepartamento.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
