{% extends 'base.html.twig' %}

{% block body %}
    <h1>Cfgfestivo</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ cfgFestivo.id }}</td>
            </tr>
            <tr>
                <th>Fecha</th>
                <td>{% if cfgFestivo.fecha %}{{ cfgFestivo.fecha|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Descripcion</th>
                <td>{{ cfgFestivo.descripcion }}</td>
            </tr>
            <tr>
                <th>Activo</th>
                <td>{% if cfgFestivo.activo %}Yes{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('cfgfestivo_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('cfgfestivo_edit', { 'id': cfgFestivo.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
