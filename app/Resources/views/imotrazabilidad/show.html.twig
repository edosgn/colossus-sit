{% extends 'base.html.twig' %}

{% block body %}
    <h1>Imotrazabilidad</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ imoTrazabilidad.id }}</td>
            </tr>
            <tr>
                <th>Fecha</th>
                <td>{% if imoTrazabilidad.fecha %}{{ imoTrazabilidad.fecha|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Estado</th>
                <td>{{ imoTrazabilidad.estado }}</td>
            </tr>
            <tr>
                <th>Activo</th>
                <td>{% if imoTrazabilidad.activo %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Descripcion</th>
                <td>{{ imoTrazabilidad.descripcion }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('imotrazabilidad_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('imotrazabilidad_edit', { 'id': imoTrazabilidad.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
