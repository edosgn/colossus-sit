{% extends 'base.html.twig' %}

{% block body %}
    <h1>Bpcuentum</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ bpCuentum.id }}</td>
            </tr>
            <tr>
                <th>Numero</th>
                <td>{{ bpCuentum.numero }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ bpCuentum.nombre }}</td>
            </tr>
            <tr>
                <th>Costototal</th>
                <td>{{ bpCuentum.costoTotal }}</td>
            </tr>
            <tr>
                <th>Activo</th>
                <td>{% if bpCuentum.activo %}Yes{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('bpcuenta_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('bpcuenta_edit', { 'id': bpCuentum.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
