{% extends 'base.html.twig' %}

{% block body %}
    <h1>Bpcdp</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ bpCdp.id }}</td>
            </tr>
            <tr>
                <th>Solicitudnumero</th>
                <td>{{ bpCdp.solicitudNumero }}</td>
            </tr>
            <tr>
                <th>Solicitudfecha</th>
                <td>{% if bpCdp.solicitudFecha %}{{ bpCdp.solicitudFecha|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Solicitudconsecutivo</th>
                <td>{{ bpCdp.solicitudConsecutivo }}</td>
            </tr>
            <tr>
                <th>Numero</th>
                <td>{{ bpCdp.numero }}</td>
            </tr>
            <tr>
                <th>Valor</th>
                <td>{{ bpCdp.valor }}</td>
            </tr>
            <tr>
                <th>Activo</th>
                <td>{% if bpCdp.activo %}Yes{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('bpcdp_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('bpcdp_edit', { 'id': bpCdp.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
