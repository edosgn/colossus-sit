{% extends 'base.html.twig' %}

{% block body %}
    <h1>Cvauestado</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ cvAuEstado.id }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ cvAuEstado.nombre }}</td>
            </tr>
            <tr>
                <th>Cuerpo</th>
                <td>{{ cvAuEstado.cuerpo }}</td>
            </tr>
            <tr>
                <th>Fecha</th>
                <td>{% if cvAuEstado.fecha %}{{ cvAuEstado.fecha|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Activo</th>
                <td>{% if cvAuEstado.activo %}Yes{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('cvauestado_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('cvauestado_edit', { 'id': cvAuEstado.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
