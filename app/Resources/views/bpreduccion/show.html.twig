{% extends 'base.html.twig' %}

{% block body %}
    <h1>Bpreduccion</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ bpReduccion.id }}</td>
            </tr>
            <tr>
                <th>Fecha</th>
                <td>{% if bpReduccion.fecha %}{{ bpReduccion.fecha|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Valor</th>
                <td>{{ bpReduccion.valor }}</td>
            </tr>
            <tr>
                <th>Justificacion</th>
                <td>{{ bpReduccion.justificacion }}</td>
            </tr>
            <tr>
                <th>Tipo</th>
                <td>{{ bpReduccion.tipo }}</td>
            </tr>
            <tr>
                <th>Activo</th>
                <td>{% if bpReduccion.activo %}Yes{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('bpreduccion_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('bpreduccion_edit', { 'id': bpReduccion.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
