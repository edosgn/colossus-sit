{% extends 'base.html.twig' %}

{% block body %}
    <h1>Bpreduccions list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Fecha</th>
                <th>Valor</th>
                <th>Justificacion</th>
                <th>Tipo</th>
                <th>Activo</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for bpReduccion in bpReduccions %}
            <tr>
                <td><a href="{{ path('bpreduccion_show', { 'id': bpReduccion.id }) }}">{{ bpReduccion.id }}</a></td>
                <td>{% if bpReduccion.fecha %}{{ bpReduccion.fecha|date('Y-m-d') }}{% endif %}</td>
                <td>{{ bpReduccion.valor }}</td>
                <td>{{ bpReduccion.justificacion }}</td>
                <td>{{ bpReduccion.tipo }}</td>
                <td>{% if bpReduccion.activo %}Yes{% else %}No{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('bpreduccion_show', { 'id': bpReduccion.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('bpreduccion_edit', { 'id': bpReduccion.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('bpreduccion_new') }}">Create a new bpReduccion</a>
        </li>
    </ul>
{% endblock %}
