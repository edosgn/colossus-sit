{% extends 'base.html.twig' %}

{% block body %}
    <h1>Bprecurso</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ bpRecurso.id }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ bpRecurso.nombre }}</td>
            </tr>
            <tr>
                <th>Tipo</th>
                <td>{{ bpRecurso.tipo }}</td>
            </tr>
            <tr>
                <th>Cantidadmedida</th>
                <td>{{ bpRecurso.cantidadMedida }}</td>
            </tr>
            <tr>
                <th>Cantidad</th>
                <td>{{ bpRecurso.cantidad }}</td>
            </tr>
            <tr>
                <th>Valorunitario</th>
                <td>{{ bpRecurso.valorUnitario }}</td>
            </tr>
            <tr>
                <th>Valortotal</th>
                <td>{{ bpRecurso.valorTotal }}</td>
            </tr>
            <tr>
                <th>Activo</th>
                <td>{% if bpRecurso.activo %}Yes{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('bprecurso_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('bprecurso_edit', { 'id': bpRecurso.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
