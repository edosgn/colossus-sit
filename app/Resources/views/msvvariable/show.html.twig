{% extends 'base.html.twig' %}

{% block body %}
    <h1>Msvvariable</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ msvVariable.id }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ msvVariable.nombre }}</td>
            </tr>
            <tr>
                <th>Estado</th>
                <td>{% if msvVariable.estado %}Yes{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('msvvariable_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('msvvariable_edit', { 'id': msvVariable.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
