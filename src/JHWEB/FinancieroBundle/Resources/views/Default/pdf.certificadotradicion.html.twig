<html>
  <header>
    <style type="text/css">
        .separator{
            margin-top: 5px;
        }
        .table td{
            max-height: 15px;
            padding: 2px;
        }
    </style>
  </header>
  <body style="font-size:12px">
    <p class="text-justify">
    	San Juan de Pasto, {{ fechaActual }}.
    	<br>
    	<br>
    	<br>
    </p>
    <h2 style="text-align:center;">
        <b>SUBSECRETARIA DE TRANSITO Y TRANSPORTE DEPARTAMENTAL DE NARIÑO</b>    
    </h2>

    <p>El vehículo de placas: <b>{{ vehiculo.placa.numero }}</b> tiene las siguientes características</p>

    <table cellpadding="5" border="1">
        <tr>
            <td  style="font-weight:bold;">Clase</td>
            {% if vehiculo.clase  %}
            <td> {{ vehiculo.clase.nombre }}</td>
            {% endif  %}
            <td style="font-weight:bold;">No.serie</td>
            <td>{{ vehiculo.serie }}</td>
        </tr>
        <tr>
            <td style="font-weight:bold;">Marca</td>
            <td> {{ vehiculo.linea.marca.nombre }}</td>
            <td style="font-weight:bold;">No.Chasis</td>
            <td>{{ vehiculo.chasis }}</td>
        </tr>
        <tr>
            <td style="font-weight:bold;">Carrocería</td>
            <td> {{ vehiculo.carroceria.nombre }}</td>
            <td style="font-weight:bold;">Cilindraje</td>
            <td>{{ vehiculo.cilindraje }}</td>
        </tr>
        <tr>
            <td style="font-weight:bold;">linea</td>
            <td> {{ vehiculo.linea.nombre }}</td>
            <td style="font-weight:bold;">Pasajeros</td>
            <td>{{ vehiculo.numeroPasajeros }}</td>
        </tr>
        <tr> 
            <td style="font-weight:bold;">Color</td>
            {% if vehiculo.color  %}
            <td>{{ vehiculo.color.nombre }}</td>
            {% endif  %}
            <td style="font-weight:bold;">Servicio</td>
            {% if vehiculo.servicio  %}
            <td>{{ vehiculo.servicio.nombre }}</td>
            {% endif  %}
        </tr>
        <tr>
            <td style="font-weight:bold;">Modelo</td>
            <td> {{ vehiculo.modelo }}</td>
            <td style="font-weight:bold;">No.motor</td>
            <td>{{ vehiculo.motor }}</td>
        </tr>
    </table>
    <div class="separator"></div>
    {% if propietarios and propietarios|length > 0 %}
    <table border="1" cellpadding="3">
        <tr>
            <th colspan="3" align="center">
                <b>PROPIETARIOS</b>
            </th>
        </tr>
        <tr align="center">
            <td><b>Identificacion</b></td>
            <td><b>Apellidos y apellidos</b></td>
            <td><b>Direccion</b></td>
        </tr>
        {% for propietario in propietarios %}
            {% if propietario.ciudadano %}
                <tr>
                    <td>{{ propietario.ciudadano.identificacion }}</td>
                    <td>
                        {{ propietario.ciudadano.primerNombre }} {{ propietario.ciudadano.segundoNombre }} {{ propietario.ciudadano.primerApellido }} {{ propietario.ciudadano.segundoApellido }}
                    </td>
                    <td>
                        {{ propietario.ciudadano.direccionPersonal }}
                    </td>
                </tr>
            {% endif %}
        {% endfor %}
    </table>
    {% endif %}
    <div class="separator"></div>
    <table border="1" cellpadding="3">
        <tr>
            <th colspan="3" align="center">
                <b>TRÁMITES</b>
            </th>
        </tr>
        <tr align="center">
            <td width="15%"><b>Fecha</b></td>
            <td width="40%"><b>Nombre Tramite</b></td>
            <td width="45%"><b>Datos</b></td>
        </tr>
        {% for key, tramiteSolicitud in tramitesSolicitud %}
            <tr style="font-size:11px">
                <td>{{ tramiteSolicitud.fecha|date('d/m/Y') }}</td>
                <td>{{ tramiteSolicitud.tramiteFactura.precio.tramite.nombre }}</td>
                <td>{% if tramiteSolicitud.resumen %}
                        {{ tramiteSolicitud.resumen }}
                    {% endif %}
                </td>
            </tr>
        {% endfor %}
    </table>

    <p>
        <h3>Observaciones</h3>
        {{ observaciones }}
    </p>

    {% if limitaciones and limitaciones|length > 0 %}
    <table border="1">
        <tr>
            <th colspan="3" align="center">
                <b>LIMITACIONES</b>
            </th>
        </tr>
        <tr align="center">
            <td>Entidad judicial</td>
            <td>Municipio</td>
            <td>Detalles</td>
            <td>Demandante</td>
            <td>Demandado</td>
        </tr>
        {% for limitacion in limitaciones %}
            <tr>
                <td>
                    {{ limitacion.entidadJudicial.nombre }}
                </td>
                <td>
                    {{ limitacion.municipio.nombre }}
                </td>
                <td>
                    <b>Tipo</b>
                    {{ limitacion.tipo.nombre }}
                    <br>
                    <b>Causal</b>
                    {{ limitacion.causal.nombre }}
                    <br>
                    <b>Tipo</b>
                    {{ limitacion.tipoProceso.nombre }}
                </td>
                <td>
                    <b>Tipo Identificación:</b>
                    {{ limitacion.demandante.identificacion }}
                    <br>
                    <b>
                    {{ limitacion.demandante.primerNombre }} {{ limitacion.demandante.segundoNombre }} {{ limitacion.demandante.primerApellido }} {{ limitacion.demandante.segundoApellido }}
                    </b>
                </td>
                <td>
                    <b>Tipo Identificación:</b>
                    {{ limitacion.demandado.identificacion }}
                    <br>
                    <b>
                    {{ limitacion.demandado.primerNombre }} {{ limitacion.demandado.segundoNombre }} {{ limitacion.demandado.primerApellido }} {{ limitacion.demandado.segundoApellido }}
                    </b>
                </td>
            </tr>
        {% endfor %}
    </table>
    {% endif %}
  </body>
</html>