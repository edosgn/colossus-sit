{% extends 'base.html.twig' %}

{% block body %}
    <h1>Tramite</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ tramite.id }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ tramite.nombre }}</td>
            </tr>
            <tr>
                <th>Valor</th>
                <td>{{ tramite.valor }}</td>
            </tr>
            <tr>
                <th>Redondeo</th>
                <td>{{ tramite.redondeo }}</td>
            </tr>
            <tr>
                <th>Unidad</th>
                <td>{{ tramite.unidad }}</td>
            </tr>
            <tr>
                <th>Afectacion</th>
                <td>{% if tramite.afectacion %}Yes{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('tramite_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('tramite_edit', { 'id': tramite.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
