{% extends 'base.html.twig' %}

{% block body %}
    <h1>Tramite list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Valor</th>
                <th>Redondeo</th>
                <th>Unidad</th>
                <th>Afectacion</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for tramite in tramites %}
            <tr>
                <td><a href="{{ path('tramite_show', { 'id': tramite.id }) }}">{{ tramite.id }}</a></td>
                <td>{{ tramite.nombre }}</td>
                <td>{{ tramite.valor }}</td>
                <td>{{ tramite.redondeo }}</td>
                <td>{{ tramite.unidad }}</td>
                <td>{% if tramite.afectacion %}Yes{% else %}No{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('tramite_show', { 'id': tramite.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('tramite_edit', { 'id': tramite.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('tramite_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
