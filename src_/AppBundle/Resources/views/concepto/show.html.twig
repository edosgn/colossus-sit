{% extends 'base.html.twig' %}

{% block body %}
    <h1>Concepto</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ concepto.id }}</td>
            </tr>
            <tr>
                <th>Descripcion</th>
                <td>{{ concepto.descripcion }}</td>
            </tr>
            <tr>
                <th>Valor</th>
                <td>{{ concepto.valor }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('concepto_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('concepto_edit', { 'id': concepto.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
