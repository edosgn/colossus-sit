{% extends 'base.html.twig' %}

{% block body %}
    <h1>Cuenta list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Numero</th>
                <th>Observacion</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for cuentum in cuentas %}
            <tr>
                <td><a href="{{ path('cuenta_show', { 'id': cuentum.id }) }}">{{ cuentum.id }}</a></td>
                <td>{{ cuentum.numero }}</td>
                <td>{{ cuentum.observacion }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('cuenta_show', { 'id': cuentum.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('cuenta_edit', { 'id': cuentum.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('cuenta_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
