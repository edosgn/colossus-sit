{% extends 'base.html.twig' %}

{% block body %}
    <h1>Cuenta</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ cuentum.id }}</td>
            </tr>
            <tr>
                <th>Numero</th>
                <td>{{ cuentum.numero }}</td>
            </tr>
