{% extends 'base.html.twig' %}

{% block body %}
    <h1>Pago list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Valor</th>
                <th>Fechapago</th>
                <th>Horapago</th>
                <th>Estado</th>
                <th>Fuente</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for pago in pagos %}
            <tr>
                <td><a href="{{ path('pago_show', { 'id': pago.id }) }}">{{ pago.id }}</a></td>
                <td>{{ pago.valor }}</td>
                <td>{% if pago.fechaPago %}{{ pago.fechaPago|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if pago.horaPago %}{{ pago.horaPago|date('H:i:s') }}{% endif %}</td>
                <td>{{ pago.estado }}</td>
                <td>{{ pago.fuente }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('pago_show', { 'id': pago.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('pago_edit', { 'id': pago.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('pago_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
